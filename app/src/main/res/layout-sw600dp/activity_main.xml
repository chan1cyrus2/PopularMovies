<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    tools:context="com.example.chan1cyrus2.popularmovies.MainActivity">
    <!--android:divider="?android:attr/dividerHorizontal"-->

    <fragment
        android:id="@+id/fragment_master"
        android:name="com.example.chan1cyrus2.popularmovies.MasterFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:context="com.example.chan1cyrus2.popularmovies.MasterFragment"
        tools:layout="@layout/fragment_master"/>

    <FrameLayout
        android:id="@+id/detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        tools:layout="@layout/fragment_detail">
    </FrameLayout>
</LinearLayout>
